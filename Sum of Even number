import java.util.*;
/**
 * First
 */
public class First {

    public static void main(String[] args) {
        Scanner sc= new Scanner(System.in);
        int n = sc.nextInt();
        System.out.println("Sum of Even number is:"+sum(n));

        
    }
    
public static int sum( int n){
    int sum1 =0;
    for( int i=1; i<=n; i++)
    {
        if(i%2==0){
            sum1 = sum1 +i;
        }
    }
    return sum1;
}

}
