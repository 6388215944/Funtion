import java.util.*;

/**
 * First
 */
public class First {

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int n = sc.nextInt();
        int res=oddSum(n);
        System.out.println("Sum of odd number:" +res);
    }

public static int oddSum( int n){
    int sum =0;
    for( int i=1; i<=n; i++)
    {
        if(i%2!=0){
            sum+=i;
    }
}
    return sum;

}
}
